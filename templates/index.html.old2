    <!-- Material Dashboard JS -->
    <script src="https://demos.creative-tim.com/material-dashboard/assets/js/core/popper.min.js"></script>
    <script src="https://demos.creative-tim.com/material-dashboard/assets/js/core/bootstrap.min.js"></script>
    <script src="https://demos.creative-tim.com/material-dashboard/assets/js/material-dashboard.min.js?v=3.1.0"></script>
    
    <script>
        // Audio player
        const audioPlayer = document.getElementById('audio-player');
        const playBtn = document.getElementById('play-btn');
        const volumeSlider = document.getElementById('volume-slider');
        let isPlaying = false;

        // Play/Pause
        function togglePlay() {
            if (isPlaying) {
                audioPlayer.pause();
                playBtn.innerHTML = '<span class="material-icons-round">play_arrow</span>';
                isPlaying = false;
            } else {
                audioPlayer.src = '/stream?nocache=' + Date.now();
                audioPlayer.play();
                playBtn.innerHTML = '<span class="material-icons-round">pause</span>';
                isPlaying = true;
            }
        }

        // Volume control
        volumeSlider.addEventListener('input', (e) => {
            audioPlayer.volume = e.target.value / 100;
            document.getElementById('volume-value').textContent = e.target.value + '%';
        });
        audioPlayer.volume = 0.8;

        // VU-Meter bars generation
        const vuMeterBarsMain = document.getElementById('vu-meter-bars-main');
        const vuBarsMain = [];
        for (let i = 0; i < 200; i++) {
            const bar = document.createElement('div');
            bar.className = 'vu-bar';
            const fill = document.createElement('div');
            fill.className = 'vu-bar-fill';
            
            // Color gradient based on position
            const percent = (i / 200) * 100;
            let color;
            if (percent < 60) color = '#66bb6a'; // Green
            else if (percent < 75) color = '#ffa726'; // Orange
            else color = '#ef5350'; // Red
            fill.style.backgroundColor = color;
            
            bar.appendChild(fill);
            vuMeterBarsMain.appendChild(bar);
            vuBarsMain.push(fill);
        }

        // Update VU-Meter
        function updateVUMeter(levelValue) {
            const value = Math.max(0, Math.min(100, levelValue));
            const dbValue = value - 100;
            
            document.getElementById('vu-meter-value-main').textContent = dbValue.toFixed(2);
            
            const activeBars = Math.round((value / 100) * vuBarsMain.length);
            vuBarsMain.forEach((bar, index) => {
                bar.style.height = index < activeBars ? '100%' : '0%';
            });
        }

        // Update stats
        async function updateStats() {
            try {
                const response = await fetch('/api/stats');
                const stats = await response.json();
                
                // Peak level
                const level = stats.current_level || -100;
                const levelPercent = Math.max(0, Math.min(100, level + 100));
                
                const levelDisplay = document.getElementById('level-display');
                if (levelDisplay) levelDisplay.textContent = level.toFixed(2) + ' dBFS';
                
                updateVUMeter(levelPercent);
                
                // Uptime
                const uptimeSeconds = stats.uptime || 0;
                const hours = Math.floor(uptimeSeconds / 3600);
                const minutes = Math.floor((uptimeSeconds % 3600) / 60);
                document.getElementById('uptime-display').textContent = `${hours}h ${minutes}m`;
                
                // Alerts
                document.getElementById('alerts-display').textContent = stats.alerts_sent || 0;
                
                // Signal status
                const statusIcon = document.getElementById('status-icon-main');
                const statusDisplay = document.getElementById('status-display');
                if (stats.signal_ok) {
                    statusIcon.className = 'icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute';
                    statusDisplay.textContent = 'Signal OK';
                } else {
                    statusIcon.className = 'icon icon-lg icon-shape bg-gradient-danger shadow-danger text-center border-radius-xl mt-n4 position-absolute';
                    statusDisplay.textContent = 'Signal Perdu';
                }
                
            } catch (error) {
                console.error('Erreur:', error);
            }
        }

        // Update RDS
        async function updateRDS() {
            try {
                const response = await fetch('/api/stats');
                const stats = await response.json();
                
                const psDisplay = document.getElementById('rds-ps-display');
                const rtDisplay = document.getElementById('rds-rt-display');
                
                if (psDisplay) psDisplay.textContent = stats.ps || 'RECHERCHE...';
                if (rtDisplay) rtDisplay.textContent = stats.rt || 'Attente de donnÃ©es RDS...';
                
            } catch (error) {
                console.error('Erreur RDS:', error);
            }
        }

        // Initialize
        updateStats();
        setInterval(updateStats, 50); // 50ms for VU-meter
        
        updateRDS();
        setInterval(updateRDS, 60000); // 60s for RDS
    </script>
</body>
