                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="row">
                                <div class="col-lg-6 col-7">
                                    <h6>Lecteur Audio & VU-MÃ¨tre</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <!-- Audio Player -->
                            <audio id="audio-player" preload="none"></audio>
                            
                            <!-- Player Controls -->
