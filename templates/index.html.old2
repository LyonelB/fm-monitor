                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <span class="material-icons-round me-2 text-secondary">volume_up</span>
                                        <input type="range" class="volume-slider flex-grow-1 me-3" id="volume-slider" min="0" max="100" value="80">
                                        <span id="volume-value" class="text-sm text-secondary">80%</span>
