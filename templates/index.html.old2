                            <!-- VU-Meter -->
                            <div class="vu-meter-container">
                                <div class="vu-meter-header">
                                    <span class="vu-meter-title">ðŸ“Š PEAK LEVEL (dBFS)</span>
                                    <span class="vu-meter-value" id="vu-meter-value-main">-100.00</span>
                                </div>
                                
                                <div class="vu-meter-bars-container" id="vu-meter-bars-main">
                                    <!-- Barres gÃ©nÃ©rÃ©es par JS -->
                                </div>
                                
                                <div class="vu-meter-scale">
                                    <span>-100</span>
                                    <span>-80</span>
                                    <span>-60</span>
