<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surveillance FM Radio</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .header h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 2.5em;
        }

        .frequency {
            color: #667eea;
            font-size: 1.5em;
            font-weight: bold;
        }

        .rds-info {
            margin-top: 15px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #28a745;
        }

        .rds-item {
            display: inline-block;
            margin-right: 20px;
            margin-bottom: 5px;
        }

        .rds-label {
            color: #666;
            font-size: 0.9em;
            margin-right: 5px;
        }

        .rds-value {
            color: #333;
            font-weight: bold;
        }

        .radiotext {
            margin-top: 10px;
            font-size: 1.1em;
            color: #667eea;
            font-style: italic;
        }

        .main-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            .main-grid {
                grid-template-columns: 1fr;
            }
        }

        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .card h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5em;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }

        .player-controls {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .audio-player {
            width: 100%;
            margin-bottom: 10px;
        }

        .play-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 1.1em;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            font-weight: bold;
        }

        .play-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .play-btn:active {
            transform: translateY(0);
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .status-ok {
            background: #d4edda;
            border-left: 5px solid #28a745;
        }

        .status-error {
            background: #f8d7da;
            border-left: 5px solid #dc3545;
        }

        .status-warning {
            background: #fff3cd;
            border-left: 5px solid #ffc107;
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        .status-dot.ok {
            background: #28a745;
        }

        .status-dot.error {
            background: #dc3545;
        }

        .status-dot.warning {
            background: #ffc107;
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .stats-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .stat-item {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }

        .stat-label {
            color: #666;
            font-size: 0.9em;
            margin-bottom: 5px;
        }

        .stat-value {
            color: #333;
            font-size: 1.3em;
            font-weight: bold;
        }

        .level-meter {
            margin: 20px 0;
        }

        .level-bar {
            width: 100%;
            height: 30px;
            background: #e9ecef;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
        }

        .level-fill {
            height: 100%;
            background: linear-gradient(90deg, #28a745, #ffc107, #dc3545);
            transition: width 0.3s ease;
            border-radius: 15px;
        }

        .level-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #333;
            font-weight: bold;
            font-size: 0.9em;
        }

        .controls-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 10px;
            margin-top: 20px;
        }

        .control-btn {
            background: #6c757d;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.2s;
            font-size: 0.95em;
        }

        .control-btn:hover {
            background: #5a6268;
        }

        .control-btn.danger {
            background: #dc3545;
        }

        .control-btn.danger:hover {
            background: #c82333;
        }

        .control-btn.success {
            background: #28a745;
        }

        .control-btn.success:hover {
            background: #218838;
        }

        .volume-control {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .volume-slider {
            flex: 1;
            height: 6px;
            border-radius: 3px;
            outline: none;
            background: #ddd;
        }

        .volume-slider::-webkit-slider-thumb {
            appearance: none;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: #667eea;
            cursor: pointer;
        }

        .footer {
            text-align: center;
            color: white;
            margin-top: 30px;
            padding: 20px;
            opacity: 0.9;
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            z-index: 1000;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .notification.success {
            background: #28a745;
        }

        .notification.error {
            background: #dc3545;
        }

        .notification.info {
            background: #17a2b8;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- En-t√™te -->
        <div class="header">
            <h1 id="station-name">üìª Surveillance FM Radio</h1>
            <div class="frequency" id="frequency">88.6 MHz</div>
            
            <!-- Donn√©es RDS -->
            <div class="rds-info" id="rds-info" style="display: none;">
                <div class="rds-item">
                    <span class="rds-label">PS:</span>
                    <span class="rds-value" id="rds-ps">-</span>
                </div>
                <div class="rds-item">
                    <span class="rds-label">PI:</span>
                    <span class="rds-value" id="rds-pi">-</span>
                </div>
                <div class="rds-item">
                    <span class="rds-label">üéµ</span>
                    <span class="rds-value" id="rds-music">-</span>
                </div>
                <div class="rds-item">
                    <span class="rds-label">üìª</span>
                    <span class="rds-value" id="rds-stereo">-</span>
                </div>
                <div class="radiotext" id="rds-radiotext"></div>
            </div>
        </div>

        <div class="main-grid">
            <!-- Lecteur Audio -->
            <div class="card">
                <h2>üéµ Lecteur Audio</h2>
                <div class="player-controls">
                    <audio id="audio-player" class="audio-player" controls preload="none"></audio>
                    <button class="play-btn" id="play-btn" onclick="togglePlay()">
                        ‚ñ∂Ô∏è D√©marrer l'√©coute
                    </button>
                    <div class="volume-control">
                        <span>üîä</span>
                        <input type="range" class="volume-slider" id="volume-slider" 
                               min="0" max="100" value="80">
                        <span id="volume-value">80%</span>
                    </div>
                </div>
            </div>

            <!-- √âtat du Signal -->
            <div class="card">
                <h2>üì° √âtat du Signal</h2>
                <div id="status-indicator" class="status-indicator status-ok">
                    <div class="status-dot ok"></div>
                    <div>
                        <strong>Signal OK</strong><br>
                        <span style="font-size: 0.9em; color: #666;">Diffusion normale</span>
                    </div>
                </div>

                <div class="level-meter">
                    <div class="stat-label">Niveau Audio</div>
                    <div class="level-bar">
                        <div class="level-fill" id="level-fill" style="width: 0%"></div>
                        <div class="level-value" id="level-value">-‚àû dB</div>
                    </div>
                </div>

                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-label">Uptime</div>
                        <div class="stat-value" id="uptime">0h 0m</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Alertes envoy√©es</div>
                        <div class="stat-value" id="alerts-count">0</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques D√©taill√©es -->
        <div class="card">
            <h2>üìä Statistiques</h2>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-label">D√©marr√© le</div>
                    <div class="stat-value" id="start-time">-</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Derni√®re alerte</div>
                    <div class="stat-value" id="last-alert">Aucune</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Statut</div>
                    <div class="stat-value" id="status">En cours</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Fr√©quence</div>
                    <div class="stat-value" id="freq-detail">98.5 MHz</div>
                </div>
            </div>

            <div class="controls-grid">
                <button class="control-btn success" onclick="controlMonitor('start')">
                    ‚ñ∂Ô∏è D√©marrer
                </button>
                <button class="control-btn danger" onclick="controlMonitor('stop')">
                    ‚èπÔ∏è Arr√™ter
                </button>
                <button class="control-btn" onclick="controlMonitor('restart')">
                    üîÑ Red√©marrer
                </button>
                <button class="control-btn" onclick="testEmail()">
                    ‚úâÔ∏è Test Email
                </button>
            </div>
        </div>

        <div class="footer">
            <p>Syst√®me de surveillance FM - RTL-SDR avec RDS</p>
            <p style="margin-top: 5px; font-size: 0.9em; opacity: 0.8;">
                Mise √† jour automatique toutes les 2 secondes
            </p>
        </div>
    </div>

    <script>
        const audioPlayer = document.getElementById('audio-player');
        const playBtn = document.getElementById('play-btn');
        const volumeSlider = document.getElementById('volume-slider');
        const volumeValue = document.getElementById('volume-value');

        let isPlaying = false;

        // Initialiser le lecteur audio
        function initAudio() {
            audioPlayer.src = '/stream.mp3';
            audioPlayer.volume = volumeSlider.value / 100;
        }

        // Toggle play/pause
        function togglePlay() {
            if (!isPlaying) {
                initAudio();
                audioPlayer.play()
                    .then(() => {
                        isPlaying = true;
                        playBtn.innerHTML = '‚è∏Ô∏è Pause';
                        showNotification('Lecture d√©marr√©e', 'success');
                    })
                    .catch(err => {
                        console.error('Erreur de lecture:', err);
                        showNotification('Erreur de lecture', 'error');
                    });
            } else {
                audioPlayer.pause();
                isPlaying = false;
                playBtn.innerHTML = '‚ñ∂Ô∏è D√©marrer l\'√©coute';
            }
        }

        // Contr√¥le du volume
        volumeSlider.addEventListener('input', (e) => {
            const volume = e.target.value;
            audioPlayer.volume = volume / 100;
            volumeValue.textContent = volume + '%';
        });

        // R√©cup√©rer les statistiques
        async function updateStats() {
            try {
                const response = await fetch('/api/stats');
                const stats = await response.json();

                // Mettre √† jour l'indicateur de statut
                const statusIndicator = document.getElementById('status-indicator');
                const statusDot = statusIndicator.querySelector('.status-dot');
                
                if (stats.signal_ok) {
                    statusIndicator.className = 'status-indicator status-ok';
                    statusDot.className = 'status-dot ok';
                    statusIndicator.querySelector('strong').textContent = 'Signal OK';
                    statusIndicator.querySelector('span').textContent = 'Diffusion normale';
                } else {
                    statusIndicator.className = 'status-indicator status-error';
                    statusDot.className = 'status-dot error';
                    statusIndicator.querySelector('strong').textContent = 'Signal Perdu';
                    statusIndicator.querySelector('span').textContent = 'Alerte envoy√©e';
                }

                // Niveau audio
                const level = stats.current_level || -100;
                const levelPercent = Math.max(0, Math.min(100, (level + 100) * 2));
                document.getElementById('level-fill').style.width = levelPercent + '%';
                document.getElementById('level-value').textContent = level.toFixed(1) + ' dB';

                // Uptime
                const uptimeSeconds = stats.uptime || 0;
                const hours = Math.floor(uptimeSeconds / 3600);
                const minutes = Math.floor((uptimeSeconds % 3600) / 60);
                document.getElementById('uptime').textContent = `${hours}h ${minutes}m`;

                // Autres stats
                document.getElementById('alerts-count').textContent = stats.alerts_sent || 0;
                document.getElementById('start-time').textContent = stats.start_time || '-';
                document.getElementById('last-alert').textContent = stats.last_alert || 'Aucune';
                document.getElementById('status').textContent = stats.status || 'Arr√™t√©';
                document.getElementById('freq-detail').textContent = stats.frequency || '';
                document.getElementById('station-name').textContent = 
                    'üìª ' + (stats.station_name || 'Surveillance FM Radio');
                
                // Mettre √† jour les donn√©es RDS
                updateRDS(stats.rds);
                
            } catch (error) {
                console.error('Erreur de r√©cup√©ration des stats:', error);
            }
        }

        // Mettre √† jour l'affichage RDS
        function updateRDS(rds) {
            const rdsInfo = document.getElementById('rds-info');
            
            if (rds && rds.ps) {
                // Afficher la section RDS
                rdsInfo.style.display = 'block';
                
                // Program Service (nom station)
                document.getElementById('rds-ps').textContent = rds.ps || '-';
                
                // Program Identification
                document.getElementById('rds-pi').textContent = rds.pi || '-';
                
                // Type de contenu
                document.getElementById('rds-music').textContent = rds.is_music ? 'Musique' : 'Parole';
                
                // St√©r√©o
                document.getElementById('rds-stereo').textContent = rds.stereo ? 'St√©r√©o' : 'Mono';
                
                // RadioText
                const radiotextEl = document.getElementById('rds-radiotext');
                if (rds.radiotext && rds.radiotext.trim()) {
                    radiotextEl.textContent = 'üéµ ' + rds.radiotext;
                    radiotextEl.style.display = 'block';
                } else {
                    radiotextEl.style.display = 'none';
                }
            } else {
                // Masquer la section RDS si pas de donn√©es
                rdsInfo.style.display = 'none';
            }
        }

        // Contr√¥le du moniteur
        async function controlMonitor(action) {
            try {
                const response = await fetch(`/api/control/${action}`, {
                    method: 'POST'
                });
                const result = await response.json();
                
                if (result.status === 'success') {
                    showNotification(result.message, 'success');
                    setTimeout(updateStats, 1000);
                } else if (result.status === 'info') {
                    showNotification(result.message, 'info');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Erreur de communication', 'error');
            }
        }

        // Test email
        async function testEmail() {
            try {
                showNotification('Envoi de l\'email de test...', 'info');
                const response = await fetch('/api/test-email', {
                    method: 'POST'
                });
                const result = await response.json();
                
                if (result.status === 'success') {
                    showNotification(result.message, 'success');
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Erreur lors du test email', 'error');
            }
        }

        // Afficher une notification
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Charger la configuration au d√©marrage
        async function loadConfig() {
            try {
                const response = await fetch('/api/config');
                const config = await response.json();
                
                if (config.station) {
                    document.getElementById('frequency').textContent = 
                        config.station.frequency_display;
                }
            } catch (error) {
                console.error('Erreur de chargement de la config:', error);
            }
        }

        // Initialisation
        loadConfig();
        updateStats();
        setInterval(updateStats, 2000); // Mise √† jour toutes les 2 secondes
    </script>
</body>
</html>
